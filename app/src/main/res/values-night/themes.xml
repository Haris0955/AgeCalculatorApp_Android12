<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your primary color here -->
        <item name="colorPrimary">@color/Cream</item>
        <item name="colorPrimaryDark">@color/Olive_Green</item>
        <item name="colorAccent">@color/Copper</item>

        <!-- Show the application name in the action bar -->
        <item name="android:windowActionBar">true</item>
        <item name="android:windowTitleSize">50dip</item> <!-- You can adjust the title size as needed -->

        <!-- Set the background color for the action bar -->
        <item name="android:windowBackground">@color/Olive_Green</item>
    </style>

</resources>