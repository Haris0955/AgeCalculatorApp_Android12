<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your primary color here -->
        <item name="colorPrimary">@color/Dark_Charcoal</item>
        <item name="colorPrimaryDark">@color/Dark_Charcoal</item>
        <item name="colorAccent">@color/your_accent_color</item>

        <!-- Show the application name in the action bar -->
        <item name="android:windowActionBar">true</item>
        <item name="android:windowTitleSize">50dip</item> <!-- You can adjust the title size as needed -->

        <!-- Set the background color for the action bar -->
        <item name="android:windowBackground">@color/Dark_Charcoal</item>
    </style>

</resources>